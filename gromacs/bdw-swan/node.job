set -u

cd $PBS_O_WORKDIR

export OMP_NUM_THREADS=2
export GMX_MAXBACKUP=-1
aprun -n 1 -d 88 -j 2 -cc none $BUILD_DIR/bin/gmx_mpi mdrun \
    -s $BENCHMARK_NODE \
    -noconfout -resethway -nsteps -1 -maxh 0.05 -quiet \
    -nb cpu -ntmpi 40 -ntomp 2 -npme 0 -pin on -notunepme
